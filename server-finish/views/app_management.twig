{% extends "base.twig" %}

{% block header %}<h1>Create your Application</h1>{% endblock %}

{% block content %}
<div class="bs-docs-section" role="main">
    {% if error is defined %}
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-dismissable alert-danger">
                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                {{ error }}
            </div>
        </div>
    </div>
    {% endif %}

    <div class="row">
      <form class="bs-example form-horizontal" action="{{ path('app_management') }}" method="post">
        <fieldset>
          <legend>Let's get you started</legend>
          <div class="form-group">
            <label for="name" class="col-lg-2 control-label">Application Name</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="name" placeholder="For Example: My Test App">
            </div>
          </div>
          <div class="form-group">
            <label for="description" class="col-lg-2 control-label">Application Description</label>
            <div class="col-lg-10">
              <textarea class="form-control" rows="3" name="description"></textarea>
              <span class="help-block">Tell us why your application is the best!</span>
            </div>
          </div>
          <div class="form-group">
            <label for="redirect_uri" class="col-lg-2 control-label">Redirect URI</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="redirect_uri" placeholder="Don't worry about this yet">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-2 control-label">Scope
              <span class="help-block"><em>What is it you want to do?</em></span></label>
            <div class="col-lg-10">
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="door-unlock"> Unlock the Door
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="toiletseat-down"> Put the Toilet Seat Down
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="ac-on"> Turn on the AC
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button class="btn btn-default">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
<div>
{% endblock %}